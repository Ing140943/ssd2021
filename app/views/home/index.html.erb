<h1>Products</h1>

<div class="container">

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Stock</th>
        <th>Brand</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.stock %></td>

          <td><%= link_to product do %>
           <%= '<i class="fas fa-eye"></i>'.html_safe %>
            <%end%>
          </td>
          <td><%= link_to edit_product_path(product) do %> 
           <%= '<i class="fa fa-cog fa-spin"></i>'.html_safe %>
            <%end%> 
          </td>
          
          <td><%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
           <%= '<i class="fas fa-trash"></i>'.html_safe %>
            <%end%> 
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div style="text-align: left">
  <%= link_to 'New Product', new_product_path %> 
</div > 



